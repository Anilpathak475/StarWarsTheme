<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content" android:layout_margin="8dp"
                                                   android:background="#E5B13A">
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewMovieName" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="22sp" android:textColor="@android:color/white"/>
    <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:id="@+id/view" app:layout_constraintTop_toBottomOf="@+id/textViewMovieName"
            app:layout_constraintStart_toStartOf="@+id/textViewMovieName"
            android:layout_marginTop="16dp" android:background="@android:color/black"
            app:layout_constraintEnd_toStartOf="@+id/imageViewDetail" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewProdecure" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/view" app:layout_constraintStart_toStartOf="@+id/view"
            android:textSize="20sp" android:textColor="@android:color/white"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewReleaseDate"
            app:layout_constraintTop_toBottomOf="@+id/textViewProdecure"
            app:layout_constraintStart_toStartOf="@+id/textViewProdecure" android:textSize="20sp"
            android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:textColor="@android:color/white"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@android:drawable/ic_menu_send"
            android:id="@+id/imageViewDetail" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintDimensionRatio="2:3"/>
</androidx.constraintlayout.widget.ConstraintLayout>